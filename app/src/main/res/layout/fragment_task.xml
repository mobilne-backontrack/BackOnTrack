<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cardview_bg">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/customer_selected"
        android:gravity="center">

        <CheckBox
            android:id="@+id/finished"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.8"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <pl.krakow.uek.customfont.LatoTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/header_item_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.hootsuite.nachos.NachoTextView
                    android:id="@+id/tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    app:chipSpacing="2dp"
                    android:background="@color/invisible"
                    app:chipBackground="@color/chip_material_background"
                    app:chipTextColor="@color/ms_black"
                    app:chipTextSize="@dimen/text_size"
                    app:chipHeight="@dimen/text_size"
                    android:textSize="@dimen/text_size"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <pl.krakow.uek.customfont.LatoTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-12-01"
                android:textAlignment="textEnd"
                android:textSize="@dimen/header_item_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/notification"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_outline_notifications" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

