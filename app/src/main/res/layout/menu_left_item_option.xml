<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="@dimen/layout_box_margin"
    android:paddingRight="@dimen/layout_box_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="@dimen/layout_box_margin"
        android:layout_height="wrap_content" />

    <pl.krakow.uek.customfont.LatoTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_text_margin"
        android:layout_marginRight="@dimen/layout_text_margin"
        android:textColor="@color/colorPrimary" />
</LinearLayout>